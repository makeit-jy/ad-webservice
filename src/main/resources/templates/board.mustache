{{>layout/header}}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">

            <table class="table table-horizontal table-bordered" style="table-layout:fixed;">
                <thead class="thead-strong">
                <tr>
                    <th>글 번호</th>
                    <th>제 목</th>
                </tr>
                </thead>


                <tbody id="tbody">
                {{#board}}
